using System.Collections
using System.Collections.Generics
using UnityEngine

public class PlayerController : MonoBehaviour
{
//velocidad de movimiento
  public float speed;
  public float turnSpeed;
//velocidad de recarga
  public float reArm;
//vida
  public float life;
//Lista con los prefabs de los modelos de Player
  public GameObject[] tanques;
  public GameObject[] aviones;
  public GameObject[] barcos;
  public Vector3[] zonas;
//Condiciones
  public int fight;
  public int gameOver
  public int nBullet;
  public int eBullet;
  public int rocket;
  public int players;
//demas
  private RigidBody playerRb;
  public GameObject bullet;

public void Start()
  {

    playerRb = getComponent<RigidBody>();





  }
public void Update()
  {

float index = RandomRandomRange(0, zonas.lenght);
  if(players && fight)
{
  transform.position.zonas[index];
}






  }
}
